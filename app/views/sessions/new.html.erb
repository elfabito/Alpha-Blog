<h1 class="text-center pt-3" >Log in for Alpha Blog</h1>

<div class="container mb-4 pb-5 pt-4">
    <div class="input-group justify-content-center mb-3">
        <div class="col-10">
            <%= form_with(scope: :session, url: login_path, class: "shadow-lg p-4 mb-3 bg-gray rounded", local:true, data: { turbo: false }, local:true ) do |f| %>

              <div class="input-group justify-content-center mb-3">
                <%= f.label :email, class:"col-2 col-form-label" %>
                <div class="col-10">
                  <%= f.email_field :email, class:"form-control", placeholder: "Enter your email address" %>
                </div>

              </div>

              <div class="input-group justify-content-center mb-3">
                <%= f.label :password, class:"col-2 col-form-label" %>
                <div class="col-10">
                  <%= f.password_field :password, class:"form-control", placeholder: "Enter your password" %>
                </div>
              </div>

              <div class="input-group justify-content-center">

                  <%= f.submit "Log in", class:"btn btn-success btn-light" %>

              </div>
              <% end %>

          </div>

            <%= link_to 'Cancel and return', root_path, class:"input-group justify-content-center mb-3" %>

      </div>
</div>
