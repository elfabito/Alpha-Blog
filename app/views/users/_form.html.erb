<div class="container mb-4 pb-5 pt-4">
    <div class="input-group justify-content-center mb-3">
        <div class="col-10">
            <%= render 'shared/errors', obj: @user %>
            <%= form_with(model: @user, class: "shadow-lg p-4 mb-3 bg-gray rounded", local:true, data: { turbo: false }, local:true ) do |f| %>

              <div class="input-group justify-content-center mb-3">
                <%= f.label :username, class:"col-2 col-form-label" %>
                <div class="col-10">
                    <%= f.text_field :username, class:"form-control", placeholder: "Enter a username" %>
                </div>
              </div>

              <div class="input-group justify-content-center mb-3">
                <%= f.label :email, class:"col-2 col-form-label" %>
                <div class="col-10">
                  <%= f.email_field :email, class:"form-control", placeholder: "Enter your email address" %>
                </div>

              </div>

              <div class="input-group justify-content-center mb-3">
                <%= f.label :password, class:"col-2 col-form-label" %>
                <div class="col-10">
                  <%= f.password_field :password, class:"form-control", placeholder: "Choose a password" %>
                </div>
              </div>

              <div class="input-group justify-content-center">

                  <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"btn btn-success btn-light") %>

              </div>
              <% end %>

          </div>

            <%= link_to 'Cancel and return to users', users_path, class:"input-group justify-content-center mb-3" %>

      </div>
</div>
