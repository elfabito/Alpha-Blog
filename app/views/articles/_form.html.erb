<div class="container mb-4 pb-5 pt-4">
    <div class="input-group justify-content-center mb-3">
        <div class="col-10">
            <%= render 'shared/errors', obj: @article %>
            <%= form_with(model: @article, class: "shadow-lg p-4 mb-3 bg-gray rounded", local:true, data: { turbo: false }, local:true ) do |f| %>
              <div class="input-group justify-content-center mb-3">
                <%= f.label :title, class:"col-2 col-form-label" %>
                <div class="col-10">
                    <%= f.text_field :title, class:"form-control", placeholder: "Title" %>
                </div>
              </div>

              <div class="input-group justify-content-center mb-3">
                <%= f.label :description, class:"col-2 col-form-label" %>
                <div class="col-10">
                  <%= f.text_area :description, rows: 10, class:"form-control", placeholder: "Description" %>
                </div>
              </div>

              <div class="input-group justify-content-center mb-3">
                <%= f.label :category, class:"col-2 col-form-label" %>
                <div class="col-10">
                  <%= f.collection_select :category_ids, Category.order(:name), :id, :name,
                  { prompt: "Select your Category from the list below ( can be empty )"}, { multiple: true, size:3, class:"form-select shadow-lg rounded" } %>
                </div>
              </div>

              <div class="input-group justify-content-center">

                  <%= f.submit class:"btn btn-success btn-light" %>

              </div>
              <% end %>

          </div>

            <%= link_to 'Cancel and return to articles', articles_path, class:"input-group justify-content-center mb-3" %>

      </div>
</div>
