<h1>Editar Articulos</h1>

<% if @article.errors.any? %>
  <h2>No se guardo el articulo por los siguientes errores</h2>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li> <%= msg %> </li>
  <% end %>
  </ul>
<% end %>

<%= form_with(model: @article, data: { turbo: false }, local:true ) do |f| %>

    <p>
       <%= f.label :title %><br/>
       <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </p>
  <p>
    <%= f.submit %>
  </p>

  <% end %>

  <%= link_to 'Volver', articles_path %>
